@import 'nib/vendor'

bd-clr = #aaa
bg-clr = #eee
fg-clr = #444

body
button
input
select
  border-radius 2px
  color fg-clr
  font-family Verdana sans-serif
  font-size 16px
  line-height 16px

body
  background-color transparent
  overflow hidden
 
button
  background-color bg-clr
  border 1px solid bd-clr
  margin 0
  &:hover
    background-color #ddd

#wrap
  position relative
  overflow hidden
  width 100%

#_cfg
  padding 5px 6px
  position absolute
  right 10px
  transition transform .1s
  top 10px
  z-index 3
  &.shown
    transform rotate(-90deg)

#cfg
  background-color bg-clr
  box-shadow 0 0 5px 1px bd-clr
  display none
  padding 50px 10px 0
  position absolute
  right 0
  top 0
  z-index 2

#game
  border 1px solid bd-clr
  border-radius 2px
  height 480px
  margin 10px
  padding 5px
  width 640px

p
  font-family "微軟正黑體", sans-serif
  line-height 1.4em
  margin 10px
  text-align justify
  width 652px
  a
    color #267dbf
